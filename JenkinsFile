pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                // Use a build automation tool like Maven
                sh 'mvn clean package'
            }
        }
        stage('Unit and Integration Tests') {
            steps {
                // Use test automation tools
                sh 'run_unit_tests'
                sh 'run_integration_tests'
            }
        }
        // Add stages 3 to 7 as described in the task
    }
    post {
    failure {
        emailext (
            subject: "Build Failed: ${currentBuild.fullDisplayName}",
            body: "The build has failed. Please check the logs for details.",
            to: 'harshitbal80@gmail.com'
        )
    }
    success {
        emailext (
            subject: "Build Successful: ${currentBuild.fullDisplayName}",
            body: "The build was successful.",
            to: 'harshitbal80@gmail.com'
        )
    }
}
}
